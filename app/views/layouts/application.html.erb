<!DOCTYPE html>
<html>
  <head>
    <title>MeMix</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>

  </head>

  <body class="bg-dark">
    <div class="container col-md-12">
      <div class="row">
        <div class="col-md-12">
          <h1 class="text-center title bg-light">Memix</h1>
        </div>
      </div>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="nav nav-tabs mx-auto">
          <%=link_to 'Home', '/', class: 'nav-item nav-link active' if request.fullpath == '/'%>
          <%=link_to 'Home', '/', class: 'nav-item nav-link' if request.fullpath != '/'%>
          <%=link_to 'Profile', user_mixes_path(current_user), class: 'nav-item nav-link' if current_user%>
  

          <%=link_to 'Logout', '/logout', class: 'nav-item nav-link' if current_user%>
          <%=link_to 'Login', '/login', class: 'nav-item nav-link' unless current_user%>
          <%=link_to 'Create Account', new_user_path, class: 'nav-item nav-link' unless current_user%>
        </div>
      </nav>
    </div>
      <%= yield %>
     
  </body>
</html>

