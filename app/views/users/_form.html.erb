
  <%=render partial: 'shared/errors', locals: {obj: user}%>
  <%=profile_image(user)%>
    <%=form_for user do |f|%>
      <%=f.file_field :avatar, class: "col-sm-9"%>
      <%=f.text_field :username, class:"form-control", placeholder: "Memix Username" %> 
      <%=f.text_field :email, class:"form-control", placeholder: "Your Email" %> 
      <%=f.password_field :password, class:"form-control", placeholder: "Password" %> 
      <%=f.password_field :password_confirmation, class:"form-control", placeholder: "Password Confirmation" %>
      <%=f.submit%>
    <%end%>
 